{
    "name": "VGG16_ImageNet",
    "n_gpu": 1,

    "arch": {
        "type": "VGG16Model",
        "args": {
        	"output_dim": 1000
        }
    },
    "data_loader": {
        "type": "ImageNetDataLoader",
        "args":{
            "data_dir": "/mnt/disk_data/yaelf/datasets/imagenet/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 0.0005
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/mnt/disk_data/yaelf/saved/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min val_loss",

        "tensorboard": false
    }
}
